<!-- MODAL -->
<script type="text/javascript">
    var btn__modal = document.getElementById('btn__modal')
    var modal = document.querySelector('.modal')
    modal.style.display = "none"
    btn__modal.addEventListener('click', () => {
        modal.style.display = "block"
    })
    window.onclick = (e) => {
        if (e.target == modal) {
            modal.style.display = "none"
        }
    }
</script>

